<%- include('../includes/header'); %>

<div class="container-fluid">
  <div class="row mt-2">
    <% products.forEach((product) => { %>
      <div class="col-md-4 col-lg-2 m-2 m-md-0">
        <img src="/<%= product.imagePath %>" class="img-fluid" style="width: 150px; height: 150px">
        <div class="d-inline-block d-md-block align-top">
          <h5><%= product.name %></h5> 
          <p><strong>$<%= product.price %></strong></p>
          <a href="/products/<%=product.id%>">Details</a>
          <form action="/admin/delete-product/<%=product.id%>?_method=DELETE" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
          <a class="btn btn-sm btn-warning" href="/admin/edit-product/<%=product.id%>">Edit</a>
        </div>
      </div>
    <% }); %>
  </div>
  <%- include('../includes/pagination') %>
</div>

<%- include('../includes/footer'); %>