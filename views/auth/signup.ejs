<%- include('../includes/header'); %>

<div class="container">
  <% if(error){ %>
    <div class="row justify-content-center m-3">
      <div class="alert alert-danger" role="alert"><%= error %></div>
    </div>
  <% } %>
  <div class="row justify-content-center m-3">
    <form action="/signup" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="name" placeholder="Name" value="<%= previousInput.name %>">
      </div>
      <div class="form-group">
        <input type="email" class="form-control" name="email" placeholder="Email" value="<%= previousInput.email %>">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password" value="<%= previousInput.password %>">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="confirmpassword" placeholder="Confirm Password">
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn btn-primary">Sign Up!</button>
    </form>
  </div>
</div>

<%- include('../includes/footer'); %>